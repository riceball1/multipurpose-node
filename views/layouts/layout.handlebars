<!DOCTYPE html>
<html lang="en">
<meta name="viewport" content="width=device-width, initial-scale=1">
<head>
    <title>Multipurpose</title>
    <link href="/public/css/normalize.css" rel="stylesheet">
    <link href="/public/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans|Quicksand">
    <link href="/public/css/styles.css" rel="stylesheet">
</head>
<body>
  <div class="container">

    <div class="header clearfix">
      <nav class="navbar">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navBar" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
    <span class="glyphicon glyphicon-menu-hamburger"></span>          </button>
           <a class="nav-brand" href="/"><h3>MULTIPURPOSE</h3></a>
        </div>

        <div class="collapse navbar-collapse" id="navBar">      
          <ul class="nav navbar-nav pull-right">
            {{#if user.admin}}
              <li><a href="/admin/settings">Admin</a></li>
            {{/if}}
            {{#if user}}
                <li><a href="/forum">Suggestions</a></li>
            <li><a href="/dashboard">Dashboard</a></li>
            <li><a href="/users/logout">Logout</a></li>
            {{else}}
            <li><a href="/users/register">Register</a></li>
            <li><a href="/users/login">Login</a></li>
            {{/if}}
          </ul>
        </div>
      </nav>
    </div>
    {{#if user}}
    <div class="searchDiv">
      <form action="/search" method="post">
      <input id="search" name="item" type="text" placeholder="Search for an item" style="width:80%;font-size:16px;padding:10px;height:40px;">
      <button id="searchItem" type="submit" style="height: 40px;padding:10px;"><span class="glyphicon glyphicon-search" aria-hidden="true" style="font-size:16px;"></span></button>
      </form>
    </div>
    {{/if}}
    <div class="row">
      <div class="col-lg-12">
        {{#if success_msg}}
            <div class="alert alert-success">{{success_msg}}</div>
          {{/if}}

          {{#if error_msg}}
            <div class="alert alert-danger">{{error_msg}}</div>
          {{/if}}

          {{#if error}}
            <div class="alert alert-danger">{{error}}</div>
          {{/if}}
      {{{body}}}
      </div>
    </div>

    <footer class="footer">
      <p>2016 &copy; Dana Ng</p>
    </footer>

  </div> <!-- /container -->
    <script src="/public/js/jquery-3.1.1.min.js"></script>

    <script src="/public/js/bootstrap.js"></script>
    <script src="/public/js/client.js"></script>

</body>
</html>
