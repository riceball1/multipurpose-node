<!DOCTYPE html>
<html lang="en">
<meta name="viewport" content="width=device-width, initial-scale=1">
<head>
    <title>Multipurpose</title>
    <link href="/public/css/normalize.css" rel="stylesheet">
    <link href="/public/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans|Quicksand">
    <link href="/public/css/styles.css" rel="stylesheet">
</head>
<body>
   <div class="container">
      <nav class="navbar">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navBar" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
    <span class="glyphicon glyphicon-menu-hamburger"></span>          </button>
           <a class="nav-brand" href="/"><h3>MULTIPURPOSE</h3></a>

        </div>

        <div class="collapse navbar-collapse" id="navBar">      
          <ul class="nav navbar-nav pull-right">
            {{#if user.admin}}
              <li><a href="/admin/settings">Admin</a></li>
            {{/if}}
            {{#if user}}
                <li><a href="/forum">Suggestions</a></li>
            <li><a href="/dashboard">Dashboard</a></li>
            <li><a href="/users/logout">Logout</a></li>
            {{else}}
            <li><a href="/users/register">Register</a></li>
            <li><a href="/users/login">Login/Demo</a></li>
            
            {{/if}}
          </ul>
        </div>
      </nav>
 

  {{#if user}}
    <div class="row">
        <div class="col-lg-6 col-lg-offset-3">
       <form action="/search" method="post">
        <div class="input-group">
        <input type="text" class="form-control" placeholder="Search for..." name="item">
        <span class="input-group-btn">
          <button id="search-item" class="btn btn-secondary" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
        </span>
        </div>
        </form>
      
    </div>
    </div>
   {{/if}} 
  


    <div class="row">
      <div class="col-lg-12">
        {{#if success_msg}}
            <div class="alert alert-success">{{success_msg}}</div>
          {{/if}}
          {{#if success}}
            <div class="alert alert-success">{{success}}</div>
          {{/if}}

          {{#if error_msg}}
            <div class="alert alert-danger">{{error_msg}}</div>
          {{/if}}

          {{#if error}}
              <div class="alert alert-danger">{{error}}</div>
          {{/if}}
      {{{body}}}
      </div>
    </div>
 </div> <!-- /container -->
    <footer class="footer navbar-fixed-bottom">
      <p>2017 &copy; Dana Ng</p>
      <p>Icons generated by <a href="http://www.flaticon.com">flaticon.com</a>. Under <a href="http://creativecommons.org/licenses/by/3.0/">CC</a>: <a data-file="coffee-grain" href="http://www.flaticon.com/authors/">Authors</a> 
     </p>
    </footer>

 
    <script src="/public/js/jquery-3.1.1.min.js"></script>

    <script src="/public/js/bootstrap.js"></script>
    <script src="/public/js/client.js"></script>

</body>
</html>
