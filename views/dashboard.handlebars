<h2>Dashboard</h2>

<div class="container">
  <div class="row">
    <div class="col-xs-4">
      <div class="avatar-div">
        <img src="/public/images/avatar.png" class="avatar" alt="avatar image">
      </div>
      <p class="user-info">
        <h3>{{user.name}}</h3>
        <small>{{user.email}}</small></br>
        <small>{{user.username}}</small>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6">
      <div class="user-tips">
        <h4>User Tips</h4>
        {{#if tips}}
        <div class="tipsList">
          {{#each tips}}
            <div class="individual-tips col-xs-4">
              <p class="tipContent">{{this.content}}<p>
              <span class="tipAuthor">{{this.userName}}</span>
            </div>
          {{/each}}
        </div>
        {{else}}
        <h5>No Tips Found.</h5>
        {{/if}}
      </div>
    </div>
    <div class="row">
      <div class="col-xs-6">
        <div class="bookmarks">
          <h4>Bookmarks</h4>
          {{#if bookmarks}}
          <div class="bookmarkList">
            {{#each bookmarks}}
              <div class="individual-bookmarks col-xs-6">
                <a href=
                "/items/{{_id}}"><img src="{{imgSrc}}" alt="{{itemName}}" class="img-hover"></a>
                <div class="middle">
                  <a href=
                "/items/{{_id}}"><div class="text">{{itemName}}</div>
                </div></a>
              </div>
            {{/each}}
          {{else}}
        </div>
         <p class="missingData">No bookmarks found.</p>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>

