
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2>{{uppercase itemName}}</h2>
    </div>
    <div class="row">
    <div class="col-xs-4">
      <img src="{{imgSrc}}" class="household-item-image" alt="{{itemName}}">

      <div class="bookmark-item">
        <form action="/items/{{_id}}" method="post">
          <input type="checkbox" name="status" value="bookmark">Bookmark Item<br>
          <input type="submit" value="Submit">
        </form>
      </div>
      <div class="household-item-description">
        <p class="item-desc">{{shortDescription}}</p>
      </div>
    </div>

      <div class="col-xs-8 tips-section">
        <div class="add-tip">
          <form method="post" action="/items/addtip" id="addItemTip">
     <div class="form-group">
      <label>Tip Content</label>
      <textarea class="form-control" name="content" form="add-tip" placeholder="Write a tip here."></textarea>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
        <div>
        <div class="tips-list">
          {{#each tips}}
            <div>{{this}}</div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>
