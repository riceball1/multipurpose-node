
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2>{{uppercase itemName}}</h2>
    </div>
    <div class="row">
    <div class="col-xs-4">
      <img src="{{imgSrc}}" class="household-item-image" alt="{{itemName}}">

      <div class="bookmark-item">
        <form action="/items/{{_id}}/bookmark" method="post">
         <input type="submit" value="Bookmark" class="btn btn-lg btn-primary">
        </form>
      </div>
      <div class="household-item-description">
        <p class="item-desc">{{shortDescription}}</p>
      </div>
    </div>

      <div class="col-xs-8 tips-section">
        <div class="add-tip">
          <form method="post" action="/items/{{_id}}/addtip" id="addItemTip">
     <div class="form-group">
      <label>Tip Content</label>
      <textarea class="form-control" name="content" form="add-tip" placeholder="Write a tip here."></textarea>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
        <div>
        <div class="tips-list">
          {{#each tips}}
            <div>{{this}}</div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>
